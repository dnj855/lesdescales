<!-- Section Titre -->
<% if content(:title).present? %>
<section class="px-4 py-12 mt-16 bg-background">
  <div class="mx-auto max-w-7xl text-center">
    <h1 class="mb-4 text-4xl font-bold text-primary md:text-5xl font-heading">
      <%= content(:title) %>
    </h1>
    <% if content(:subtitle).present? %>
      <div class="mx-auto mt-6 max-w-3xl text-lg leading-relaxed text-gray-600 font-body">
        <%= content(:subtitle).html_safe %>
      </div>
    <% end %>
  </div>
</section>
<% end %>

<!-- Section principale : Galeries -->
<% galleries = Spina::Resource.find_by(name: 'galleries')&.pages&.live&.sorted || [] %>
<% if galleries.any? %>
<section class="px-4 py-12 bg-white">
  <div class="mx-auto max-w-7xl">
    
    
    <!-- Grille des galeries -->
    <div class="grid gap-6 sm:grid-cols-2 lg:grid-cols-3">
      <% galleries.each do |gallery| %>
        <div class="bento-card fade-in group">
          <%= link_to gallery.materialized_path, class: "block h-full" do %>
            <div class="flex flex-col h-full">
              
              <!-- Image preview avec aspect ratio fixe -->
              <% if gallery.content(:gallery).present? %>
                <div class="overflow-hidden relative rounded-t-xl aspect-[4/3] bg-gradient-to-br from-gray-100 to-gray-200">
                  <%= gallery.content.image_tag(gallery.content(:gallery).first, {}, {
                    class: "w-full h-full object-cover transition-transform duration-300 group-hover:scale-105",
                    alt: gallery.title
                  }) %>
                  <div class="absolute inset-0 bg-gradient-to-t via-transparent to-transparent from-black/30"></div>
                  
                  <!-- Badge nombre de photos -->
                  <div class="flex absolute top-4 right-4 items-center px-3 py-1 rounded-full shadow-lg backdrop-blur-sm bg-white/95">
                    <i class="mr-1 text-xs fas fa-images text-primary"></i>
                    <span class="text-xs text-gray-900 font-body">
                      <%= gallery.content(:gallery).count %> photos
                    </span>
                  </div>
                </div>
              <% else %>
                <div class="relative rounded-t-xl aspect-[4/3] bg-gradient-to-br from-primary/10 to-primary/20">
                  <div class="flex justify-center items-center w-full h-full">
                    <i class="text-4xl fas fa-camera-retro text-primary"></i>
                  </div>
                </div>
              <% end %>
              
              <!-- Contenu de la carte -->
              <div class="flex flex-col flex-1 justify-between p-4">
                <div>
                  <!-- Titre avec icône -->
                  <div class="flex items-start mb-3">
                    <i class="mt-1 mr-2 text-base fas fa-camera-retro text-primary"></i>
                    <h3 class="text-lg font-semibold leading-tight group-hover:underline text-primary font-heading">
                      <%= gallery.title %>
                    </h3>
                  </div>
                  
                  <!-- Description courte -->
                  <% if gallery.content(:description).present? %>
                    <p class="mb-3 text-sm leading-relaxed text-gray-600 line-clamp-2 font-body">
                      <%= strip_tags(gallery.content(:description).to_s).truncate(80) %>
                    </p>
                  <% end %>
                </div>
                
                <!-- CTA en bas -->
                <div class="flex justify-between items-center pt-3 mt-auto border-t border-gray-100">
                  <span class="text-sm font-medium text-gray-600 font-body">
                    <i class="mr-2 text-primary fas fa-images"></i>
                    <%= gallery.content(:gallery).count %> photos
                  </span>
                  <i class="text-sm transition-transform fas fa-arrow-right group-hover:translate-x-1 text-primary"></i>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</section>
<% end %>
<!-- Section CTA -->
