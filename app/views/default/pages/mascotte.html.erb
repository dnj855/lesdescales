<!-- Section Titre -->
<% if content(:title).present? %>
<section class="px-4 py-12 mt-16 bg-background">
  <div class="mx-auto max-w-7xl text-center">
    <h1 class="mb-4 text-4xl font-bold text-gray-900 md:text-5xl font-family-heading">
      <%= content(:title) %>
    </h1>
  </div>
</section>
<% end %>

<!-- Section principale : Histoire et illustrations intégrées -->
<% if content(:mascotte_story).present? || content(:mascotte_illustrations).present? %>
<section class="px-4 py-12 bg-white">
  <div class="mx-auto max-w-7xl">
    <div class="grid gap-8 items-start lg:grid-cols-2 lg:gap-12">
      
      <!-- Colonne de gauche : Histoire -->
      <div class="order-2 lg:order-1">
        <% if content(:mascotte_story).present? %>
          <div class="bento-card fade-in lg:sticky lg:top-8">
            <div class="p-8">
              <div class="flex items-center mb-6">
                <i class="mr-4 text-3xl text-primary fas fa-star"></i>
                <h2 class="text-3xl font-semibold text-gray-900 font-family-heading">
                  Notre histoire
                </h2>
              </div>
              <div class="max-w-none leading-relaxed text-gray-900 prose prose-lg font-family-body">
                <%= content(:mascotte_story).html_safe %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
      
      <!-- Colonne de droite : Slider d'illustrations -->
      <div class="overflow-hidden order-1 min-w-0 lg:order-2">
        <% if content(:mascotte_illustrations).present? %>
          <div class="overflow-hidden min-w-0 max-w-full bento-card fade-in">
            <div class="p-4" data-controller="swiper">
              <!-- Swiper container -->
              <div data-swiper-target="container" class="swiper mascotte-swiper">
                <div class="swiper-wrapper">
                  <% images(:mascotte_illustrations) do |image| %>
                    <div class="swiper-slide">
                      <%= content.image_tag image, {}, 
                          {class: "w-full h-auto object-cover object-center rounded-lg max-h-[500px]"} %>
                    </div>
                  <% end %>
                </div>
                
                <!-- Navigation buttons -->
                <div class="swiper-button-prev"></div>
                <div class="swiper-button-next"></div>
              </div>
              
              <!-- Pagination outside swiper container -->
              <div data-swiper-target="pagination" class="mt-4 swiper-pagination-custom"></div>
              
              <!-- Légende optionnelle -->
              <div class="mt-4 text-center">
                <p class="text-sm text-gray-600 font-family-body">
                  <i class="mr-2 text-primary fas fa-images"></i>
                  Découvrez notre mascotte à travers nos événements
                </p>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</section>
<% end %>

<!-- Section CTA -->
<section class="px-4 py-16 bg-background">
  <div class="mx-auto max-w-7xl text-center">
    <div class="bento-card bento-card-cta fade-in">
      <div class="p-8">
        <h3 class="mb-4 text-2xl font-semibold text-gray-900 font-family-heading">
          <i class="mr-3 text-primary fas fa-dice"></i>
          Envie de nous rencontrer ?
        </h3>
        <p class="mb-6 text-lg text-gray-900 font-family-body">
          Retrouvez notre mascotte et toute l'équipe lors de nos événements !
        </p>
        <div class="flex flex-wrap gap-4 justify-center">
          <a href="/animations" class="inline-flex items-center px-6 py-3 text-white rounded-lg transition-colors duration-200 bg-primary font-family-body" 
            <i class="mr-2 text-primary fas fa-calendar-check"></i>
            Voir nos animations
          </a>
          <a href="/contact" class="inline-flex items-center px-6 py-3 rounded-lg border-2 transition-colors duration-200 border-primary text-primary font-family-body">
            <i class="mr-2 fas fa-envelope"></i>
            Nous contacter
          </a>
        </div>
      </div>
    </div>
  </div>
</section>

