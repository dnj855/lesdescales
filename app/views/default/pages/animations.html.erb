<!-- Section Titre -->
<% if content(:title).present? %>
<section class="px-4 py-12 mt-16 bg-background">
  <div class="mx-auto max-w-7xl text-center">
    <h1 class="mb-4 text-4xl font-bold text-primary md:text-5xl font-heading">
      <%= content(:title) %>
    </h1>
    <% if content(:subtitle).present? %>
      <div class="mx-auto mt-6 max-w-3xl text-lg leading-relaxed text-gray-600 font-body">
        <%= content(:subtitle).html_safe %>
      </div>
    <% end %>
  </div>
</section>
<% end %>

<!-- Section principale : Description et Animations -->
<% if content(:description).present? || animations.any? %>
<section class="px-4 py-12 bg-white">
  <div class="mx-auto max-w-7xl">
    <div class="grid gap-8 items-start lg:grid-cols-5 lg:gap-8">
      
      <!-- Colonne de gauche : Description -->
      <div class="lg:sticky lg:top-20 lg:col-span-2">
        <% if content(:description).present? %>
          <div class="bento-card fade-in">
            <div class="p-8">
              <div class="flex items-center mb-6">
                <i class="mr-4 text-3xl text-primary fas fa-dice-d20"></i>
                <h2 class="text-3xl font-semibold text-primary font-heading">
                  Nos animations
                </h2>
              </div>
              <div class="max-w-none leading-relaxed text-gray-900 prose prose-lg font-body">
                <%= content(:description).html_safe %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
      
      <!-- Colonne de droite : Grille des animations -->
      <div class="min-w-0 lg:col-span-3">
        <% if animations.any? %>
            <div class="grid gap-8 lg:grid-cols-3">
              
                <% animations.each do |animation| %>
                  <div class="mb-4">
                    <div class="h-full bento-card fade-in group">
                      <%= link_to animation.materialized_path, class: "block h-full" do %>
                        <div class="flex flex-col h-full">
                          
                          <!-- Image avec aspect ratio fixe -->
                          <% if animation.content(:gallery).present? %>
                            <div class="overflow-hidden relative rounded-t-xl aspect-[4/3] bg-gradient-to-br from-gray-100 to-gray-200">
                              <%= animation.content.image_tag(animation.content(:gallery).first, {}, {
                                class: "w-full h-full object-cover transition-transform duration-300 group-hover:scale-105",
                                alt: animation.title
                              }) %>
                              <div class="absolute inset-0 bg-gradient-to-t via-transparent to-transparent from-black/30"></div>
                            </div>
                          <% else %>
                            <div class="relative rounded-t-xl aspect-[4/3] bg-gradient-to-br from-orange-100 to-orange-200">
                              <div class="flex justify-center items-center w-full h-full">
                                <i class="text-3xl fas fa-dice-d6 text-orange"></i>
                              </div>
                            </div>
                          <% end %>
                          
                          <!-- Contenu de la carte -->
                          <div class="flex flex-col flex-1 justify-between p-4">
                            <div>
                              <!-- Titre avec icône -->
                              <div class="flex items-start mb-2">
                                <i class="mt-1 mr-2 text-base fas fa-calendar-check text-primary"></i>
                                <h3 class="text-lg font-semibold leading-tight font-heading group-hover:underline">
                                  <%= animation.title %>
                                </h3>
                              </div>
                              
                              <!-- Infos pratiques -->
                              <div class="mb-3 space-y-2">
                                <% if animation.content(:animation_date).present? %>
                                  <div class="flex items-center text-sm text-gray-600 font-body">
                                    <i class="mr-2 w-4 fas fa-calendar text-orange"></i>
                                    <%= animation.content(:animation_date) %>
                                  </div>
                                <% end %>
                                <% if animation.content(:animation_location).present? %>
                                  <div class="flex items-center text-sm text-gray-600 font-body">
                                    <i class="mr-2 w-4 fas fa-map-marker-alt text-orange"></i>
                                    <%= animation.content(:animation_location) %>
                                  </div>
                                <% end %>
                              </div>
                              
                              <!-- Description courte -->
                              <% if animation.content(:description).present? %>
                                <p class="mb-3 text-sm leading-relaxed text-gray-600 line-clamp-2 font-body">
                                  <%= strip_tags(animation.content(:description).to_s).truncate(80) %>
                                </p>
                              <% end %>
                            </div>
                            
                            <!-- CTA en bas -->
                            <div class="flex justify-between items-center pt-3 mt-auto border-t border-gray-100">
                              <span class="text-sm font-medium text-gray-600 font-body">
                                En savoir plus
                              </span>
                              <i class="text-base transition-transform fas fa-arrow-right group-hover:translate-x-1 text-primary"></i>
                            </div>
                          </div>
                        </div>
                      <% end %>
                    </div>
                  </div>
                <% end %>
              </div>
            </div>
        <% end %>
      </div>
    </div>
  </div>
</section>
<% end %>

<!-- Section CTA -->
<section class="px-4 py-16 bg-background">
  <div class="mx-auto max-w-7xl text-center">
    <div class="bento-card bento-card-cta fade-in">
      <div class="p-8">
        <h3 class="mb-4 text-2xl font-semibold text-primary font-heading">
          <i class="mr-3 text-primary fas fa-calendar-plus"></i>
          Vous souhaitez organiser un événement ?
        </h3>
        <p class="mb-6 text-lg text-gray-900 font-body">
          Découvrez nos animations et contactez-nous pour organiser votre événement !
        </p>
        <div class="flex flex-wrap gap-4 justify-center">
          <a href="/animations-archives" class="inline-flex items-center px-6 py-3 text-white rounded-lg transition-colors duration-200 bg-primary font-heading hover:bg-primary-dark">
            <i class="mr-2 text-white fas fa-archive"></i>
            Voir toutes nos animations
          </a>
          <a href="/contact" class="inline-flex items-center px-6 py-3 rounded-lg border-2 transition-colors duration-200 border-primary text-primary font-heading hover:bg-primary hover:text-white">
            <i class="mr-2 fas fa-envelope"></i>
            Nous contacter
          </a>
        </div>
      </div>
    </div>
  </div>
</section>