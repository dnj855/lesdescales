            <i class="mr-2 w-12 h-12 text-4xl fas fa-thumbs-up" style="color: var(--color-primary);"></i>
            <h3 class="mb-4 text-2xl font-semibold" style="font-family: var(--font-family-heading); color: var(--color-gray-900);">
              Vous êtes intéressés ?
            </h3>
            </div>
            <div class="mb-6 max-w-none prose prose-base" style="font-family: var(--font-family-body); color: var(--color-gray-900);">
              <%= content(:cta_text).html_safe %>
            </div>
            <div class="flex flex-col gap-4 justify-center sm:flex-row">
              <a href="/contact" class="inline-flex items-center px-6 py-3 text-white rounded-lg transition-colors duration-200 hover:scale-105" style="background-color: var(--color-primary); font-family: var(--font-family-body);">
                <i class="mr-2 fas fa-envelope"></i>
                Nous contacter
              </a>
            </div>
          </div>
        </div>
      <% end %>
      
    </div>

    <!-- Layout Mobile/Tablet : Stack vertical -->
    <div class="space-y-6 lg:hidden">
      
      <!-- Archives -->
      <div class="bento-card bento-card-poster fade-in group">
        <%= link_to animations_archives_path, class: "block p-6 text-decoration-none" do %>
          <div class="text-center">
            <div class="p-4 mx-auto mb-4 rounded-full w-fit" style="background: linear-gradient(135deg, var(--color-primary), var(--color-orange));">
              <i class="text-2xl text-white fas fa-archive"></i>
            </div>
            <h3 class="mb-3 text-xl font-semibold" style="font-family: var(--font-family-heading); color: var(--color-gray-900);">
              Archives des animations
            </h3>
            <p class="mb-4 text-sm leading-relaxed" style="color: var(--color-gray-600); font-family: var(--font-family-body);">
              Découvrez nos animations passées
            </p>
            <div class="inline-flex items-center text-sm font-medium transition-colors group-hover:underline" style="color: var(--color-primary); font-family: var(--font-family-body);">
              <span>Voir les archives</span>
              <i class="ml-2 transition-transform fas fa-arrow-right group-hover:translate-x-1"></i>
            </div>
          </div>
        <% end %>
      </div>
      
      <!-- CTA -->
      <% if content(:cta_text).present? %>
        <div class="bento-card bento-card-cta fade-in">
          <div class="p-6 text-center">
            <i class="mb-4 text-3xl fas fa-users" style="color: var(--color-primary);"></i>
            <h3 class="mb-3 text-xl font-semibold" style="font-family: var(--font-family-heading); color: var(--color-gray-900);">
              Vous êtes intéressés ?
            </h3>
            <div class="mb-4 max-w-none prose prose-sm" style="font-family: var(--font-family-body); color: var(--color-gray-900);">
              <%= content(:cta_text).html_safe %>
            </div>
            <div class="flex flex-col gap-3 justify-center">
              <a href="/contact" class="inline-flex justify-center items-center px-6 py-3 text-white rounded-lg transition-colors duration-200" style="background-color: var(--color-primary); font-family: var(--font-family-body);">
                <i class="mr-2 fas fa-envelope"></i>
                Nous contacter
              </a>
              <a href="/adhesion" class="inline-flex justify-center items-center px-6 py-3 rounded-lg border-2 transition-colors duration-200" style="border-color: var(--color-primary); color: var(--color-primary); font-family: var(--font-family-body);">
                <i class="mr-2 fas fa-heart"></i>
                Adhérer à l'association
              </a>
            </div>
          </div>
        </div>
      <% end %>
      
    </div>
    
  </div>
</section>