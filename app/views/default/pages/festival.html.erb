<!-- Section Titre -->
<% if content(:title).present? %>
<section class="px-4 py-12 mt-16 bg-background">
  <div class="mx-auto max-w-7xl text-center">
    <h1 class="mb-4 text-4xl font-bold text-primary md:text-5xl font-heading">
      <%= content(:title) %>
    </h1>
    <% if content(:subtitle).present? %>
      <div class="mx-auto mt-6 max-w-3xl text-lg leading-relaxed text-gray-600 font-body">
        <%= content(:subtitle).html_safe %>
      </div>
    <% end %>
  </div>
</section>
<% end %>

<!-- Section Prochain Festival -->
<section class="px-4 py-12 bg-white">
  <div class="mx-auto max-w-7xl">
    
    <!-- Titre de section -->
    <div class="mb-8 text-center">
      <h2 class="mb-4 text-3xl font-bold text-primary font-heading fade-in">
        <i class="mr-3 text-orange fas fa-star"></i>
        Prochaine Édition
      </h2>
    </div>

    <% if content(:festival_next_teasing_mode).present? && content(:festival_next_teasing_mode) == "true" %>
      <!-- Mode Teasing -->
      <div class="bento-card fade-in">
        <div class="p-8 text-center">
          <!-- Image -->
          <% if content(:festival_next_teasing_image).present? %>
            <div class="mb-6">
              <%= content.image_tag(:festival_next_teasing_image, {}, {
                class: "w-full h-80 object-cover rounded-lg",
                alt: "#{content(:festival_next_title) || 'Prochain Festival'} Les Dés'Calés"
              }) %>
            </div>
          <% elsif content(:festival_next_image).present? %>
            <div class="mb-6">
              <%= content.image_tag(:festival_next_image, {}, {
                class: "w-full h-80 object-cover rounded-lg",
                alt: "#{content(:festival_next_title) || 'Prochain Festival'} Les Dés'Calés"
              }) %>
            </div>
          <% end %>
          
          <!-- En-tête -->
          <div class="flex justify-center items-center mb-6">
            <i class="mr-4 text-3xl text-primary fas fa-dice-d20"></i>
            <div>
              <h3 class="mb-2 text-3xl font-semibold text-primary font-heading">
                <%= content(:festival_next_title).present? ? content(:festival_next_title) : 'Festival des jeux' %>
              </h3>
              <p class="text-lg font-medium text-orange">
                L'aventure commence bientôt...
              </p>
            </div>
          </div>
          
          <!-- Contenu -->
          <% if content(:festival_next_teasing_text).present? %>
            <div class="mx-auto mb-6 max-w-2xl">
              <div class="leading-relaxed text-gray-900 prose prose-lg font-body">
                <%= content(:festival_next_teasing_text).html_safe %>
              </div>
            </div>
          <% else %>
            <div class="mx-auto mb-6 max-w-2xl">
              <p class="mb-4 leading-relaxed text-gray-900 font-body">
                Une nouvelle aventure ludique se prépare...
              </p>
              <p class="leading-relaxed text-gray-900 font-body">
                Restez connectés pour découvrir toutes les surprises de notre prochaine édition !
              </p>
            </div>
          <% end %>

          <!-- Date -->
          <% if content(:festival_next_date).present? %>
            <div class="inline-flex items-center px-6 py-3 rounded-lg bg-background">
              <i class="mr-3 text-xl fas fa-calendar-alt text-orange"></i>
              <span class="text-lg font-bold text-primary font-heading">
                <%= content(:festival_next_date) %>
              </span>
            </div>
          <% end %>
        </div>
      </div>
    <% else %>
      <!-- Mode Normal -->
      <div class="grid gap-8 items-start lg:grid-cols-2 lg:gap-12">
        
        <!-- Colonne de gauche : Image -->
        <div class="order-2 lg:order-1">
          <% if content(:festival_next_image).present? %>
            <div class="bento-card fade-in">
              <div class="p-8">
                <%= content.image_tag(:festival_next_image, {}, {
                  class: "w-full h-auto object-cover object-center rounded-lg max-h-[500px]",
                  alt: "#{content(:festival_next_title) || 'Prochain Festival'} Les Dés'Calés"
                }) %>
              </div>
            </div>
          <% else %>
            <!-- Fallback sans image -->
            <div class="bento-card fade-in">
              <div class="p-8 text-center">
                <div class="mb-6">
                  <i class="text-6xl text-primary fas fa-dice-d20"></i>
                </div>
                <p class="text-lg text-gray-600 font-body">
                  <i class="mr-2 text-primary fas fa-images"></i>
                  Image à venir
                </p>
              </div>
            </div>
          <% end %>
        </div>
        
        <!-- Colonne de droite : Informations -->
        <div class="order-1 lg:order-2">
          <div class="bento-card fade-in lg:sticky lg:top-8">
            <div class="p-8">
              <!-- En-tête -->
              <div class="flex items-center mb-6">
                <i class="mr-4 text-3xl text-primary fas fa-trophy"></i>
                <div>
                  <h3 class="mb-2 text-3xl font-semibold text-primary font-heading">
                    <%= content(:festival_next_title).present? ? content(:festival_next_title) : 'Festival Annuel des Jeux' %>
                  </h3>
                  <% if content(:festival_next_description).present? %>
                    <p class="text-lg font-medium text-orange">
                      <%= content(:festival_next_description).html_safe %>
                    </p>
                  <% else %>
                    <p class="text-lg font-medium text-orange">
                      Le rendez-vous incontournable des passionnés de jeux
                    </p>
                  <% end %>
                </div>
              </div>

              <!-- Informations clés -->
              <div class="mb-8 space-y-4">
                <% if content(:festival_next_date).present? %>
                  <div class="flex items-center p-4 rounded-lg bg-background">
                    <i class="mr-3 text-xl text-primary fas fa-calendar-alt"></i>
                    <div>
                      <p class="text-sm font-medium text-gray-600">Date</p>
                      <p class="text-base font-bold text-primary font-heading">
                        <%= content(:festival_next_date) %>
                      </p>
                    </div>
                  </div>
                <% end %>
                
                <% if content(:festival_next_location).present? %>
                  <div class="flex items-center p-4 rounded-lg bg-background">
                    <i class="mr-3 text-xl text-primary fas fa-map-marker-alt"></i>
                    <div>
                      <p class="text-sm font-medium text-gray-600">Lieu</p>
                      <p class="text-base font-bold text-primary font-heading">
                        <%= content(:festival_next_location) %>
                      </p>
                    </div>
                  </div>
                <% end %>
                
                <% if content(:festival_next_price).present? %>
                  <div class="flex items-center p-4 rounded-lg bg-background">
                    <i class="mr-3 text-xl text-primary fas fa-ticket-alt"></i>
                    <div>
                      <p class="text-sm font-medium text-gray-600">Tarif</p>
                      <p class="text-base font-bold text-primary font-heading">
                        <%= content(:festival_next_price) %>
                      </p>
                    </div>
                  </div>
                <% end %>
              </div>

              <!-- Boutons d'action -->
              <div class="flex flex-wrap gap-4 justify-center">
                <a href="#programme" class="inline-flex items-center px-6 py-3 text-white rounded-lg transition-colors duration-200 bg-primary font-heading hover:bg-primary-dark">
                  <i class="mr-2 fas fa-list-ul"></i>
                  Voir le programme
                </a>
                <a href="/contact" class="inline-flex items-center px-6 py-3 rounded-lg border-2 transition-colors duration-200 border-primary text-primary font-heading hover:bg-primary hover:text-white">
                  <i class="mr-2 fas fa-envelope"></i>
                  Nous contacter
                </a>
              </div>
            </div>
          </div>
        </div>
        
      </div>
    <% end %>
  </div>
</section>

<!-- Section Programme -->
<% if content(:festival_program_days).present? || content(:festival_partners).present? %>
<section id="programme" class="px-4 py-12 bg-background">
  <div class="mx-auto max-w-7xl">
    <div class="mb-8 text-center">
      <h2 class="mb-4 text-3xl font-bold text-primary font-heading fade-in">
        <i class="mr-3 text-orange fas fa-calendar-check"></i>
        Programme
      </h2>
    </div>

    <div class="grid gap-6 md:grid-cols-2 xl:grid-cols-3">
      
      <% repeater(:festival_program_days) do |day| %>
        <div class="bento-card fade-in">
          <div class="p-8">
            <div class="flex items-center mb-6">
              <% day_name = day.content(:program_day_name).to_s.downcase %>
              <% if day_name.include?('samedi') || day_name.include?('saturday') %>
                <i class="mr-4 text-3xl text-orange fas fa-sun"></i>
              <% elsif day_name.include?('dimanche') || day_name.include?('sunday') %>
                <i class="mr-4 text-3xl text-primary fas fa-moon"></i>
              <% elsif day_name.include?('vendredi') || day_name.include?('friday') || day_name.include?('soir') %>
                <i class="mr-4 text-3xl text-orange fas fa-star"></i>
              <% else %>
                <i class="mr-4 text-3xl text-primary fas fa-calendar-day"></i>
              <% end %>
              
              <div>
                <h3 class="text-2xl font-semibold text-primary font-heading">
                  <%= day.content(:program_day_name) %>
                </h3>
                <% if day.content(:program_day_hours).present? %>
                  <p class="text-lg font-medium text-orange">
                    <%= day.content(:program_day_hours) %>
                  </p>
                <% end %>
              </div>
            </div>
            
            <% if day.content(:program_day_content).present? %>
              <div class="leading-relaxed text-gray-900 prose prose-lg font-body">
                <%= day.content(:program_day_content).html_safe %>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>

      <% if content(:festival_partners).present? %>
        <div class="bento-card fade-in">
          <div class="p-8">
            <div class="flex items-center mb-6">
              <i class="mr-4 text-3xl text-orange fas fa-handshake"></i>
              <h3 class="text-2xl font-semibold text-primary font-heading">
                Nos Partenaires
              </h3>
            </div>
            <div class="leading-relaxed text-gray-900 prose prose-lg font-body">
              <%= content(:festival_partners).html_safe %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</section>
<% end %>

<!-- Section Éditions Précédentes -->
<% if festival_editions.any? %>
<section class="px-4 py-12 bg-white">
  <div class="mx-auto max-w-7xl">
    
    <div class="mb-8 text-center">
      <h2 class="mb-4 text-3xl font-bold text-primary font-heading fade-in">
        <i class="mr-3 text-orange fas fa-history"></i>
        Nos Éditions Précédentes
      </h2>
      <p class="text-lg leading-relaxed text-gray-900 font-body fade-in">
        Revivez les moments forts de nos festivals passés
      </p>
    </div>

    <div class="grid gap-6 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4">
      <% festival_editions.each do |edition| %>
        <div class="bento-card fade-in">
          <div class="flex flex-col h-full">
            <!-- Image d'affiche -->
            <% if edition.content(:edition_poster_image).present? %>
              <div class="mb-4">
                <%= edition.content.image_tag(:edition_poster_image, {}, {
                  class: "w-full h-auto object-cover rounded-lg max-h-[300px]",
                  alt: "Affiche #{edition.title}"
                }) %>
              </div>
            <% elsif edition.content(:gallery).present? %>
              <div class="mb-4">
                <%= edition.content.image_tag(edition.content(:gallery).first, {}, {
                  class: "w-full h-auto object-cover rounded-lg max-h-[300px]",
                  alt: "#{edition.title}"
                }) %>
              </div>
            <% else %>
              <div class="mb-4 text-center">
                <div class="flex justify-center items-center h-48 rounded-lg bg-background">
                  <div class="text-center">
                    <i class="mb-3 text-4xl text-orange fas fa-images"></i>
                    <p class="text-sm font-medium text-gray-600 font-body">Affiche à venir</p>
                  </div>
                </div>
              </div>
            <% end %>
            
            <!-- Contenu de la carte -->
            <div class="flex flex-col flex-1 justify-between p-8">
              <div>
                <div class="flex items-center mb-4">
                  <i class="mr-3 text-xl text-primary fas fa-calendar"></i>
                  <div>
                    <h3 class="text-xl font-semibold text-primary font-heading">
                      <%= edition.title %>
                      <% if edition.content(:edition_year).present? %>
                        <span class="ml-1 text-base font-medium text-orange">
                          (<%= edition.content(:edition_year) %>)
                        </span>
                      <% end %>
                    </h3>
                  </div>
                </div>
                
                <% if edition.content(:description).present? %>
                  <div class="mb-6 leading-relaxed text-gray-900 font-body">
                    <%= truncate(strip_tags(edition.content(:description).html_safe), length: 120) %>
                  </div>
                <% end %>
              </div>
              
              <div class="mt-auto">
                <%= link_to edition.materialized_path, 
                    class: "inline-flex items-center text-primary font-body hover:underline" do %>
                  <span>Découvrir cette édition</span>
                  <i class="ml-2 fas fa-arrow-right"></i>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</section>
<% end %>

<!-- Section CTA finale -->
<section class="px-4 py-16 bg-background">
  <div class="mx-auto max-w-7xl text-center">
    <div class="bento-card bento-card-cta fade-in">
      <div class="p-8">
        <h3 class="mb-4 text-2xl font-semibold text-primary font-heading">
