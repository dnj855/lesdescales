<!-- Section Titre -->
<section class="px-4 py-12 mt-16 bg-background">
  <div class="mx-auto max-w-7xl text-center">
    <!-- Navigation retour intégrée -->
    <div class="mb-6">
      <%= link_to page_path('en-images'), class: "inline-flex items-center px-4 py-2 text-sm font-medium transition-all duration-200 rounded-lg bg-white/10 backdrop-blur-sm text-primary font-body hover:bg-white/20" do %>
        <i class="mr-2 fas fa-arrow-left"></i>
        Retour aux Galeries
      <% end %>
    </div>
    <h1 class="mb-4 text-4xl font-bold text-primary md:text-5xl font-heading">
      <i class="mr-3 fas fa-camera-retro text-orange"></i>
      <%= current_page.title %>
    </h1>
    <!-- Infos galerie en ligne -->
    <% if content(:gallery).present? %>
      <div class="flex flex-wrap gap-4 justify-center text-gray-600 font-body">
        <div class="flex gap-2 items-center">
          <i class="fas fa-images text-primary"></i>
          <%= content(:gallery).count %> photos
        </div>
      </div>
    <% end %>
  </div>
</section>

<!-- Section principale : Description -->
<% if content(:description).present? %>
<section class="px-4 py-12 bg-white">
  <div class="mx-auto max-w-7xl">
    <div class="bento-card fade-in">
      <div class="p-8">
        <div class="flex items-center mb-6">
          <i class="mr-4 text-3xl text-primary fas fa-info-circle"></i>
          <h2 class="text-3xl font-semibold text-primary font-heading">
            Présentation
          </h2>
        </div>
        <div class="max-w-none leading-relaxed text-gray-900 prose prose-lg font-body">
          <%= content(:description).html_safe %>
        </div>
      </div>
    </div>
  </div>
</section>
<% end %>

<!-- Section Galerie Photos -->
<% if content(:gallery).present? && content(:gallery).any? %>
<section class="px-4 py-12 bg-background">
  <div class="mx-auto max-w-7xl">
    <div class="mb-8 text-center">
      <h2 class="mb-2 text-3xl font-bold fade-in text-primary font-heading">
        <i class="mr-3 fas fa-images text-orange"></i>
        Galerie Photos
      </h2>
      <p class="text-lg fade-in text-gray-900 font-body">
        Découvrez les moments capturés dans cette galerie
      </p>
    </div>

    <div class="bento-card fade-in">
      <div class="p-4" data-controller="swiper">
        <div data-swiper-target="container" class="swiper gallery-swiper">
          <div class="swiper-wrapper">
            <% content(:gallery).each_with_index do |image, index| %>
              <div class="swiper-slide">
                <a href="<%= main_app.rails_blob_url(image) %>" 
                   data-lightbox="gallery" 
                   data-title="<%= current_page.title %> - Photo <%= index + 1 %>">
                  <div class="overflow-hidden relative rounded-lg aspect-[4/3] bg-gray-100">
                    <%= content.image_tag(image, { resize_to_fill: [800, 600] }, {
                        class: "w-full h-full object-cover transition-all duration-300 hover:scale-105",
                        loading: "lazy",
                        alt: "#{current_page.title} - Photo #{index + 1}"
                    }) %>
                    <div class="flex absolute inset-0 justify-center items-center opacity-0 transition-opacity duration-300 hover:opacity-100">
                      <div class="p-3 rounded-full" style="background-color: rgba(0,0,0,0.7);">
                        <i class="text-2xl text-white fas fa-expand"></i>
                      </div>
                    </div>
                  </div>
                </a>
              </div>
            <% end %>
          </div>
          
          <div class="swiper-button-prev"></div>
          <div class="swiper-button-next"></div>
        </div>
        
        <div data-swiper-target="pagination" class="mt-4 swiper-pagination-custom"></div>
        
        <!-- Légende -->
        <div class="mt-4 text-center">
          <p class="text-sm text-gray-600 font-body">
            <i class="mr-2 text-primary fas fa-images"></i>
            Découvrez les moments capturés dans cette galerie
          </p>
        </div>
      </div>
    </div>
  </div>
</section>
<% else %>
<!-- Message si pas de photos -->
<section class="px-4 py-12 bg-background">
  <div class="mx-auto max-w-7xl">
    <div class="text-center">
      <div class="bento-card fade-in">
        <div class="p-12">
          <i class="mb-6 text-6xl fas fa-camera-retro text-orange"></i>
          <h3 class="mb-4 text-2xl font-semibold text-primary font-heading">
            Aucune photo dans cette galerie
          </h3>
          <p class="mb-6 text-lg text-gray-900 font-body">
            Les photos seront bientôt ajoutées à cette galerie.
          </p>
          <%= link_to page_path('en-images'), class: "inline-flex items-center px-6 py-3 text-white rounded-lg transition-all duration-200 hover:scale-105 bg-primary font-body" do %>
            <i class="mr-2 fas fa-arrow-left"></i>
            Retour aux galeries
          <% end %>
        </div>
      </div>
    </div>
  </div>
</section>
<% end %>

<!-- Section Autres Galeries -->
<section class="px-4 py-12 bg-white">
  <div class="mx-auto max-w-7xl">
    <div class="mb-8 text-center">
      <h2 class="mb-2 text-3xl font-bold fade-in text-primary font-heading">
        <i class="mr-3 fas fa-camera-retro text-orange"></i>
        Découvrir Nos Autres Galeries
      </h2>
    </div>

    <% other_galleries = Spina::Resource.find_by(name: 'galleries')&.pages&.live&.sorted&.where.not(id: current_page.id)&.limit(6) || [] %>
    
    <% if other_galleries.any? %>
      <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3">
        <% other_galleries.each do |gallery| %>
          <div class="bento-card bento-card-poster fade-in group">
            <%= link_to gallery.materialized_path, class: "block" do %>
              <div class="p-4">
                <div class="flex items-center mb-3">
                  <i class="mr-2 text-lg fas fa-camera-retro text-primary"></i>
                  <h3 class="text-lg font-semibold group-hover:underline text-primary font-heading">
                    <%= gallery.title %>
                  </h3>
                </div>
                
                <% if gallery.content(:gallery).present? %>
                  <div class="overflow-hidden mb-3 h-40 rounded-lg">
                    <%= gallery.content.image_tag(gallery.content(:gallery).first, {}, {
                      class: "w-full h-full object-cover transition-transform duration-300 group-hover:scale-105",
                      alt: gallery.title
                    }) %>
                  </div>
                <% else %>
                  <div class="flex justify-center items-center mb-3 h-40 bg-gradient-to-br from-orange-100 to-orange-200 rounded-lg">
                    <i class="text-3xl fas fa-camera-retro text-orange"></i>
                  </div>
                <% end %>
                
                <div class="flex justify-between items-center">
                  <span class="text-sm text-primary font-body">
                    Découvrir cette galerie
                  </span>
                  <i class="transition-transform fas fa-arrow-right group-hover:translate-x-1 text-primary"></i>
                </div>
              </div>
            <% end %>
          </div>
        <% end %>
      </div>
      
      <div class="mt-8 text-center">
        <%= link_to page_path('en-images'), 
            class: "inline-flex items-center px-6 py-3 text-white rounded-lg transition-colors duration-200 bg-primary font-heading hover:bg-primary-dark" do %>
          <i class="mr-2 fas fa-camera-retro"></i>
          Voir Toutes Nos Galeries
        <% end %>
      </div>
    <% else %>
      <div class="text-center">
        <div class="bento-card fade-in">
          <div class="p-8">
            <p class="text-lg text-gray-900 font-body">
              Aucune autre galerie disponible pour le moment.
            </p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</section>