<!-- Section Titre -->
<section class="px-4 py-12 mt-16 bg-background">
  <div class="mx-auto max-w-7xl text-center">
    <!-- Navigation retour intégrée -->
    <div class="mb-6">
      <%= link_to "/festival", class: "inline-flex items-center px-4 py-2 text-sm font-medium transition-all duration-200 rounded-lg bg-white/10 backdrop-blur-sm text-primary font-body hover:bg-white/20" do %>
        <i class="mr-2 fas fa-arrow-left"></i>
        Retour au Festival
      <% end %>
    </div>
    <h1 class="mb-4 text-4xl font-bold text-primary md:text-5xl font-heading">
      <i class="mr-3 fas fa-dice-d20 text-orange"></i>
      <%= current_page.title %>
      <% if content(:edition_year).present? %>
        <span class="ml-2 text-2xl font-medium text-orange">
          (<%= content(:edition_year) %>)
        </span>
      <% end %>
    </h1>
    <!-- Infos édition en ligne -->
    <% if content(:edition_date).present? || content(:edition_location).present? %>
      <div class="flex flex-wrap gap-4 justify-center text-gray-600 font-body">
        <% if content(:edition_date).present? %>
          <div class="flex gap-2 items-center">
            <i class="fas fa-calendar text-primary"></i>
            <%= content(:edition_date) %>
          </div>
        <% end %>
        <% if content(:edition_location).present? %>
          <div class="flex gap-2 items-center">
            <i class="fas fa-map-marker-alt text-primary"></i>
            <%= content(:edition_location) %>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</section>

<!-- Section principale : Description et affiche -->
<% if content(:description).present? || content(:edition_poster_image).present? %>
<section class="px-4 py-12 bg-white">
  <div class="mx-auto max-w-7xl">
    <div class="grid gap-8 items-start lg:grid-cols-2 lg:gap-12">
      
      <!-- Colonne de gauche : Description -->
      <div class="order-2 lg:order-1">
        <% if content(:description).present? %>
          <div class="bento-card fade-in lg:sticky lg:top-8">
            <div class="p-8">
              <div class="flex items-center mb-6">
                <i class="mr-4 text-3xl text-primary fas fa-info-circle"></i>
                <h2 class="text-3xl font-semibold text-primary font-heading">
                  Présentation
                </h2>
              </div>
              <div class="max-w-none leading-relaxed text-gray-900 prose prose-lg font-body">
                <%= content(:description).html_safe %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
      
      <!-- Colonne de droite : Affiche -->
      <div class="order-1 lg:order-2">
        <% if content(:edition_poster_image).present? %>
          <div class="bento-card fade-in">
            <div class="p-4">
              <%= content.image_tag(:edition_poster_image, {}, {
                class: "w-full h-auto rounded-lg",
                alt: "Affiche #{current_page.title}"
              }) %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</section>
<% end %>

<!-- Section Galerie Photos -->
<% if content(:gallery).present? %>
<section class="px-4 py-12 bg-background">
  <div class="mx-auto max-w-7xl">
    <div class="mb-8 text-center">
      <h2 class="mb-2 text-3xl font-bold fade-in text-primary font-heading">
        <i class="mr-3 fas fa-images text-orange"></i>
        Galerie Photos
      </h2>
      <p class="text-lg fade-in text-gray-900 font-body">
        Revivez les meilleurs moments de cette édition
      </p>
    </div>

    <div class="bento-card fade-in">
      <div class="p-4" data-controller="swiper">
        <div data-swiper-target="container" class="swiper gallery-swiper">
          <div class="swiper-wrapper">
            <% images(:gallery) do |image| %>
              <div class="swiper-slide">
                <%= content.image_tag image, {}, 
                    {class: "w-full h-auto object-cover object-center rounded-lg max-h-[500px]"} %>
              </div>
            <% end %>
          </div>
          
          <div class="swiper-button-prev"></div>
          <div class="swiper-button-next"></div>
        </div>
        
        <div data-swiper-target="pagination" class="mt-4 swiper-pagination-custom"></div>
        
        <!-- Légende -->
        <div class="mt-4 text-center">
          <p class="text-sm text-gray-600 font-body">
            <i class="mr-2 text-primary fas fa-images"></i>
            Revivez les meilleurs moments de cette édition
          </p>
        </div>
      </div>
    </div>
  </div>
</section>
<% end %>

<!-- Section Statistiques -->
<% if content(:edition_visitors_count).present? || content(:edition_games_count).present? || content(:edition_tournaments_count).present? || content(:edition_hours_count).present? %>
<%
  # Count actual statistics to determine grid layout
  stats_count = 0
  stats_count += 1 if content(:edition_visitors_count).present?
  stats_count += 1 if content(:edition_games_count).present?
  stats_count += 1 if content(:edition_tournaments_count).present?
  stats_count += 1 if content(:edition_hours_count).present?
  
  # Dynamic grid classes based on stats count
  grid_classes = case stats_count
    when 1 then "grid gap-6 justify-center"
    when 2 then "grid gap-6 md:grid-cols-2 justify-center"
    when 3 then "grid gap-6 md:grid-cols-2 lg:grid-cols-3"
    else "grid gap-6 md:grid-cols-2 lg:grid-cols-4"
  end
%>
<section class="px-4 py-12 bg-white">
  <div class="mx-auto max-w-7xl">
    <div class="mb-8 text-center">
      <h2 class="mb-2 text-3xl font-bold fade-in text-primary font-heading">
        <i class="mr-3 fas fa-chart-bar text-orange"></i>
        Cette Édition en Chiffres
      </h2>
    </div>

    <div class="<%= grid_classes %>">
      <% if content(:edition_visitors_count).present? %>
        <div class="bento-card bento-card-small fade-in">
          <div class="p-6 text-center">
            <i class="mb-3 text-3xl fas fa-users text-primary"></i>
            <div class="mb-2 text-2xl font-bold text-primary font-heading">
              <%= content(:edition_visitors_count) %>
            </div>
            <p class="text-sm text-gray-900 font-body">
              Visiteurs accueillis
            </p>
          </div>
        </div>
      <% end %>
      
      <% if content(:edition_games_count).present? %>
        <div class="bento-card bento-card-small fade-in">
          <div class="p-6 text-center">
            <i class="mb-3 text-3xl fas fa-dice text-orange"></i>
            <div class="mb-2 text-2xl font-bold text-primary font-heading">
              <%= content(:edition_games_count) %>
            </div>
            <p class="text-sm text-gray-900 font-body">
              Jeux proposés
            </p>
          </div>
        </div>
      <% end %>
      
      <% if content(:edition_tournaments_count).present? %>
        <div class="bento-card bento-card-small fade-in">
          <div class="p-6 text-center">
            <i class="mb-3 text-3xl fas fa-trophy text-primary"></i>
            <div class="mb-2 text-2xl font-bold text-primary font-heading">
              <%= content(:edition_tournaments_count) %>
            </div>
            <p class="text-sm text-gray-900 font-body">
              Tournois organisés
            </p>
          </div>
        </div>
      <% end %>
      
      <% if content(:edition_hours_count).present? %>
        <div class="bento-card bento-card-small fade-in">
          <div class="p-6 text-center">
            <i class="mb-3 text-3xl fas fa-clock text-orange"></i>
            <div class="mb-2 text-2xl font-bold text-primary font-heading">
              <%= content(:edition_hours_count) %>
            </div>
            <p class="text-sm text-gray-900 font-body">
              Heures de plaisir
            </p>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</section>
<% end %>

<!-- Section Autres Éditions -->
<section class="px-4 py-12 bg-background">
  <div class="mx-auto max-w-7xl">
    <div class="mb-8 text-center">
      <h2 class="mb-2 text-3xl font-bold fade-in text-primary font-heading">
        <i class="mr-3 fas fa-history text-orange"></i>
        Découvrir Nos Autres Éditions
      </h2>
    </div>

    <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3">
      <% festival_editions.reject { |edition| edition.id == current_page.id }.first(6).each do |edition| %>
        <div class="bento-card bento-card-poster fade-in group">
          <%= link_to edition.materialized_path, class: "block" do %>
            <div class="p-4">
              <div class="flex items-center mb-3">
                <i class="mr-2 text-lg fas fa-calendar text-primary"></i>
                <h3 class="text-lg font-semibold group-hover:underline text-primary font-heading">
                  <%= edition.title %>
                  <% if edition.content(:edition_year).present? %>
                    <span class="ml-1 text-sm font-medium text-orange">
                      (<%= edition.content(:edition_year) %>)
                    </span>
                  <% end %>
                </h3>
              </div>
              
              <% if edition.content(:gallery).present? %>
                <div class="overflow-hidden mb-3 h-40 rounded-lg">
                  <%= edition.content.image_tag(edition.content(:gallery).first, {}, {
                    class: "w-full h-full object-cover transition-transform duration-300 group-hover:scale-105",
                    alt: edition.title
                  }) %>
                </div>
              <% else %>
                <div class="flex justify-center items-center mb-3 h-40 bg-gradient-to-br from-orange-100 to-orange-200 rounded-lg">
                  <i class="text-3xl fas fa-images text-orange"></i>
                </div>
              <% end %>
              
              <div class="flex justify-between items-center">
                <span class="text-sm text-primary font-body">
                  Découvrir cette édition
                </span>
                <i class="transition-transform fas fa-arrow-right group-hover:translate-x-1 text-primary"></i>
              </div>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>

    <div class="mt-8 text-center">
      <%= link_to "/festival", 
          class: "inline-flex items-center px-6 py-3 text-white rounded-lg transition-colors duration-200 bg-primary font-heading hover:bg-primary-dark" do %>
        <i class="mr-2 fas fa-list"></i>
        Voir Toutes Nos Éditions
      <% end %>
    </div>
  </div>
</section>