<!-- Template pour un événement individuel -->
<div class="max-w-7xl mx-auto py-12 px-6">
  <!-- Titre de l'événement -->
  <h1 class="text-4xl font-bold text-warm-orange mb-6">
    <%= current_page.title %>
  </h1>
  
  <!-- Date de l'événement -->
  <% if content(:date).present? %>
    <div class="text-lg text-dark-charcoal mb-6 flex items-center">
      <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 20 20">
        <path d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1z"/>
      </svg>
      <%= content(:date) %>
    </div>
  <% end %>
  
  <!-- Contenu principal -->
  <div class="prose max-w-none mb-8">
    <%= content.html(:content) %>
  </div>
  
  <!-- Galerie de photos -->
  <% if content(:pictures).present? %>
    <div class="mt-12">
      <h3 class="text-2xl font-bold mb-6 text-dark-charcoal">Galerie photos</h3>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
        <% content(:pictures).each do |image| %>
          <div class="overflow-hidden rounded-lg shadow-lg">
            <%= image_tag image.image, 
                class: "w-full h-64 object-cover hover:scale-105 transition-transform duration-300",
                alt: image.alt || "Photo de l'événement" %>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>
  
  <!-- Navigation retour -->
  <div class="mt-12 pt-8 border-t border-gray-200">
    <%= link_to "← Retour aux événements", 
        spina.page_path(Spina::Page.find_by(name: 'events')), 
        class: "inline-flex items-center text-warm-orange hover:text-dark-charcoal transition-colors" %>
  </div>
</div> 