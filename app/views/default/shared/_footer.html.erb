<!-- Footer principal -->
<footer class="bg-[var(--color-dark-surface)] text-[var(--color-dark-text-primary)] py-[var(--spacing-12)]">
  <div class="max-w-[var(--container-7xl)] mx-auto px-[var(--spacing-4)]">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-[var(--spacing-8)] lg:gap-[var(--spacing-12)] pb-[var(--spacing-8)]">
      
      <!-- Colonne de gauche - À propos -->
      <div class="space-y-[var(--spacing-4)]">
        <div class="space-y-[var(--spacing-3)]">
          <div class="w-[var(--icon-large)] h-[var(--icon-large)] bg-[var(--color-warm-orange)] rounded-[var(--radius-sm)] flex items-center justify-center">
            <i class="fa-solid fa-dice"></i>
          </div>
          <h3 class="text-[var(--text-h3)] font-[var(--font-weight-semibold)] text-white">
            <%= current_spina_account.name %>
          </h3>
        </div>
        
        <p class="text-[var(--text-body)] leading-[var(--text-body--line-height)]">
          Association de jeux de société à Barentin. Plus de 240 jeux à découvrir, des soirées conviviales et des événements toute l'année. Rejoignez notre communauté passionnée !
        </p>

      </div>

      <!-- Colonne du milieu - Liens rapides -->
      <div class="space-y-[var(--spacing-4)]">
        <div class="space-y-[var(--spacing-3)]">
          <div class="w-[var(--icon-large)] h-[var(--icon-large)]"></div>
          <h3 class="text-[var(--text-h3)] font-[var(--font-weight-semibold)] text-white">
            Liens Rapides
          </h3>
        </div>
        <div class="flex flex-col">
          <% nav_items.each do |nav_item| %>
            <%= link_to nav_item.menu_title, nav_item.materialized_path, 
                class: "text-[var(--text-small)] text-[var(--color-dark-text-secondary)] hover:text-[var(--color-warm-orange)] transition-colors duration-[var(--duration-micro)]" %>
          <% end %>
        </div>
      </div>

      <!-- Colonne de droite - Réseaux sociaux -->
      <div class="space-y-[var(--spacing-4)]">
        <div class="space-y-[var(--spacing-3)]">
          <div class="w-[var(--icon-large)] h-[var(--icon-large)]"></div>
          <h3 class="text-[var(--text-h3)] font-[var(--font-weight-semibold)] text-white">
            Restons en contact
          </h3>
        </div>
        
        <!-- Réseaux sociaux -->
        <div class="flex space-x-[var(--spacing-4)]">
          <% social_networks.each do |network, url| %>
            <a href="<%= url %>" class="w-[var(--button-height-compact)] h-[var(--button-height-compact)] bg-[var(--color-warm-gray)] hover:bg-[var(--color-warm-orange)] rounded-[var(--radius-md)] flex items-center justify-center transition-colors duration-[var(--duration-micro)]"
               aria-label="<%= network %>">
              <i class="fa-brands fa-<%= network %> fa-xl"></i>
            </a>
          <% end %>
        </div>

        <div class="space-y-[var(--spacing-2)] text-[var(--text-small)]">
          <p class="font-[var(--font-weight-medium)] text-[var(--color-dark-text-secondary)]">
            <%= current_spina_account.address %><br />
            <%= current_spina_account.postal_code %> <%= current_spina_account.city %>
          </p>
          <p>
            <a class="hover:text-[var(--color-warm-orange)] transition-colors duration-[var(--duration-micro)] text-[var(--color-dark-text-secondary)]" href="mailto:<%= current_spina_account.email %>">
              <%= current_spina_account.email %>
            </a>
          </p>
          <p>
            <a class="hover:text-[var(--color-warm-orange)] transition-colors duration-[var(--duration-micro)] text-[var(--color-dark-text-secondary)]" href="tel:<%= current_spina_account.phone %>">
              <%= current_spina_account.phone %>
            </a>
          </p>
        </div>
      </div>
    </div>

    <!-- Ligne de séparation et copyright -->
    <div class="border-t border-[var(--color-dark-border)] pt-[var(--spacing-6)]">
      <div class="flex flex-col md:flex-row justify-between items-center space-y-[var(--spacing-4)] md:space-y-0">
        <p class="text-[var(--text-small)]">
          <% require 'date'%>
          © <%= Date.today.year %> Les Dés'Calés. Tous droits réservés.
        </p>
        
        <nav class="flex space-x-[var(--spacing-6)]">
          <%= link_to 'Mentions légales', page_path('mentions-legales'), class: 'text-[var(--text-small)] text-[var(--color-dark-text-secondary)] hover:text-[var(--color-warm-orange)] transition-colors duration-[var(--duration-micro)]' %>
        </nav>
      </div>
    </div>
  </div>
</footer>
